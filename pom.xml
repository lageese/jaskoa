                <annotationApi.version>1.3.2</annotationApi.version>
            </properties>
        </profile>
        <profile>
            <id>thrift-0.21.0</id>
            <properties>
                <thrift.version>0.21.0</thrift.version>
                <slf4j.version>2.0.13</slf4j.version>
                <annotationApi.version>1.3.2</annotationApi.version>
            </properties>
        </profile>
        <profile>
            <id>thrift-0.22.0</id>
