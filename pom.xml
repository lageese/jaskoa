        <profile>
            <id>thrift-0.14.0</id>
            <properties>
                <thrift.version>0.14.0</thrift.version>
            </properties>
        </profile>
        <profile>
            <id>thrift-0.14.1</id>
            <properties>
                <thrift.version>0.14.1</thrift.version>
            </properties>
        </profile>
        <profile>
            <id>thrift-0.14.2</id>
            <properties>
                <thrift.version>0.14.2</thrift.version>
            </properties>
        </profile>
        <profile>
            <id>thrift-0.15.0</id>
            <properties>
                <thrift.version>0.15.0</thrift.version>
            </properties>
        </profile>
        <profile>
            <id>thrift-0.16.0</id>
            <properties>
                <thrift.version>0.16.0</thrift.version>
            </properties>
        </profile>
        <profile>
            <id>thrift-0.17.0</id>
            <properties>
                <thrift.version>0.17.0</thrift.version>
