                <slf4j.version>2.0.7</slf4j.version>
                <annotationApi.version>1.3.2</annotationApi.version>
            </properties>
        </profile>
        <profile>
            <id>thrift-0.18.1</id>
            <properties>
                <thrift.version>0.18.1</thrift.version>
                <slf4j.version>2.0.7</slf4j.version>
                <annotationApi.version>1.3.2</annotationApi.version>
            </properties>
        </profile>
        <profile>
            <id>thrift-0.19.0</id>
            <properties>
                <thrift.version>0.19.0</thrift.version>
                <slf4j.version>2.0.7</slf4j.version>
